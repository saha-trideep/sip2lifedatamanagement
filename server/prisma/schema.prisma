generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("EMPLOYEE")
  createdAt DateTime @default(now())
  documents Document[]
  folders   Folder[] 
  registers RegisterLink[]
  auditLogs AuditLog[]
  invitesCreated UserInvite[] @relation("InvitedBy")
  reg76Entries   Reg76Entry[]
  reg74Events    Reg74Event[]
}

model VatMaster {
  id          Int      @id @default(autoincrement())
  vatCode     String   @unique // SST-5 to SST-10, BRT-11 to BRT-17
  vatType     String   // SST, BRT
  capacityBl  Float?
  status      String   @default("IDLE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  events      Reg74Event[]
}

model Reg74Event {
  id               Int      @id @default(autoincrement())
  vatId            Int
  vat              VatMaster @relation(fields: [vatId], references: [id])
  eventDateTime    DateTime
  eventType        String   // UNLOADING, INTERNAL_TRANSFER, WATER_ADDITION, BLENDING, PRODUCTION, ADJUSTMENT, OPENING, CLOSING
  
  // Contextual Data Blocks (populated based on eventType)
  openingData      Json?    // Cols 1-7: dipCm, temp, alcInd, strength, volumeBl, volumeAl
  receiptData      Json?    // Cols 8-11: source, qtyBl, strength, qtyAl
  issueData        Json?    // Cols 12-15: dest, caskNo, qtyBl, strength
  adjustmentData   Json?    // Cols 16-19 / 22-24: type(INC/WAST), reason, qtyBl, qtyAl, rltDip, rltBl
  productionData   Json?    // Cols 25-33: rltBl, strength, rltAl, vatCount, mfmBl, density, mfmStrength, mfmAl, deadStockAl
  closingData      Json?    // Cols 34-37: finalDipCm, finalBl, finalStrength, finalAl
  
  remarks          String?
  createdBy        Int
  user             User     @relation(fields: [createdBy], references: [id])
  createdAt        DateTime @default(now())

  @@index([vatId])
  @@index([eventDateTime])
}

model UserInvite {
  id          String    @id @default(uuid())
  email       String
  name        String?
  role        String    @default("EMPLOYEE")
  tokenHash   String    @unique
  expiresAt   DateTime
  usedAt      DateTime?
  invitedById Int
  invitedBy   User      @relation("InvitedBy", fields: [invitedById], references: [id])
  createdAt   DateTime  @default(now())

  @@index([email])
  @@index([tokenHash])
  @@index([expiresAt])
}

model Folder {
  id        Int        @id @default(autoincrement())
  name      String
  department String?    
  createdAt DateTime   @default(now())
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  documents Document[]
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String   
  filename    String   
  path        String   
  type        String   
  description String?
  department  String   
  uploadedAt  DateTime @default(now())
  
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  
  folderId    Int?
  folder      Folder?  @relation(fields: [folderId], references: [id])
}

model RegisterLink {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     Int
  action     String
  entityType String
  entityId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([action])
  @@index([entityType])
  @@index([createdAt])
}

model Vat {
  id    Int    @id @default(autoincrement())
  name  String @unique // e.g., SST-5
  type  String // e.g., Spirit Storage
}

model Reg76Entry {
  id                    Int      @id @default(autoincrement())
  receiptDate           DateTime
  arrivalDate           DateTime?
  permitNo              String
  permitDate            DateTime?
  exportingDistillery   String
  invoiceNo             String
  invoiceDate           DateTime?
  vehicleNo             String
  tankerMakeModel       String?
  natureOfSpirit        String   
  storageVat            String   

  // Advised
  advisedBl             Float
  advisedAl             Float
  advisedStrength       Float
  advisedMassKg         Float

  // Measurement
  ladenWeightKg         Float
  unladenWeightKg       Float
  avgDensity            Float
  avgTemperature        Float

  // Result
  receivedStrength      Float
  remarks               String?

  // Auto-calculated fields
  receivedMass          Float
  receivedBl            Float
  receivedAl            Float
  transitWastageBl      Float
  transitWastageAl      Float

  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
