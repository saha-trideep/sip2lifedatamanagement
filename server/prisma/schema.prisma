generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("EMPLOYEE")
  createdAt DateTime @default(now())
  documents Document[]
  folders   Folder[] 
  registers RegisterLink[]
  auditLogs AuditLog[]
  invitesCreated UserInvite[] @relation("InvitedBy")
  reg76Entries   Reg76Entry[]
  reg74Openings  Reg74OpeningSnapshot[]
  reg74Receipts  Reg74ReceiptMfm1[]
  reg74Adjustments Reg74Adjustment[]
  reg74QCClearances Reg74QCClearance[]
  reg74Issues    Reg74IssueMfm2[]
  reg74Closings  Reg74ClosingSnapshot[]
}

// ... (other models)

model BlendingVat {
  id              Int      @id @default(autoincrement())
  vatCode         String   @unique // e.g., BRT-11
  capacityBl      Float
  status          String   @default("IDLE") // IDLE, FILLING, BLENDING, READY, EMPTYING
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  openings        Reg74OpeningSnapshot[]
  receipts        Reg74ReceiptMfm1[]
  adjustments     Reg74Adjustment[]
  qcClearances    Reg74QCClearance[]
  issues          Reg74IssueMfm2[]
  closings        Reg74ClosingSnapshot[]
}

model Reg74OpeningSnapshot {
  id                    Int      @id @default(autoincrement())
  dateTime              DateTime
  vatId                 Int
  vat                   BlendingVat @relation(fields: [vatId], references: [id])
  dipCm                 Float
  temperatureC          Float
  alcoholmeterIndication Float
  strengthVv            Float
  volumeBl              Float
  volumeAl              Float
  rltDipCm              Float
  rltVolumeBl           Float
  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
}

model Reg74ReceiptMfm1 {
  id                    Int      @id @default(autoincrement())
  dateTime              DateTime
  vatId                 Int
  vat                   BlendingVat @relation(fields: [vatId], references: [id])
  sourceVat             String   // SST-5 ... SST-10
  mfmTag                String   @default("INPUT")
  qtyBl                 Float
  avgStrengthVv         Float
  qtyAl                 Float
  avgDensity            Float
  linkedReg76Id         Int?
  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
}

model Reg74Adjustment {
  id                    Int      @id @default(autoincrement())
  dateTime              DateTime
  vatId                 Int
  vat                   BlendingVat @relation(fields: [vatId], references: [id])
  adjustmentType        String   // INCREASE / WASTAGE
  reason                String   // OPERATIONAL / STOCK_AUDIT
  qtyBl                 Float
  qtyAl                 Float
  rltDipCm              Float?
  rltVolumeBl           Float?
  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
}

model Reg74QCClearance {
  id                    Int      @id @default(autoincrement())
  qcDateTime            DateTime
  vatId                 Int
  vat                   BlendingVat @relation(fields: [vatId], references: [id])
  finalStrengthVv       Float
  approvedBy            String
  remarks               String?
  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
}

model Reg74IssueMfm2 {
  id                    Int      @id @default(autoincrement())
  dateTime              DateTime
  vatId                 Int
  vat                   BlendingVat @relation(fields: [vatId], references: [id])
  destination           String   // PRODUCTION / VAT / CASK
  mfmTag                String   @default("OUTPUT")
  qtyBl                 Float
  avgDensity            Float
  strengthVv            Float
  qtyAl                 Float
  deadStockAl           Float
  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
}

model Reg74ClosingSnapshot {
  id                    Int      @id @default(autoincrement())
  dateTime              DateTime
  vatId                 Int
  vat                   BlendingVat @relation(fields: [vatId], references: [id])
  finalDipCm            Float
  finalVolumeBl         Float
  finalStrengthVv       Float
  finalQtyAl            Float
  remarks               String?
  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
}

model UserInvite {
  id          String    @id @default(uuid())
  email       String
  name        String?
  role        String    @default("EMPLOYEE")
  tokenHash   String    @unique
  expiresAt   DateTime
  usedAt      DateTime?
  invitedById Int
  invitedBy   User      @relation("InvitedBy", fields: [invitedById], references: [id])
  createdAt   DateTime  @default(now())

  @@index([email])
  @@index([tokenHash])
  @@index([expiresAt])
}

model Folder {
  id        Int        @id @default(autoincrement())
  name      String
  department String?    
  createdAt DateTime   @default(now())
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  documents Document[]
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String   
  filename    String   
  path        String   
  type        String   
  description String?
  department  String   
  uploadedAt  DateTime @default(now())
  
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  
  folderId    Int?
  folder      Folder?  @relation(fields: [folderId], references: [id])
}

model RegisterLink {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     Int
  action     String
  entityType String
  entityId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([action])
  @@index([entityType])
  @@index([createdAt])
}

model Vat {
  id    Int    @id @default(autoincrement())
  name  String @unique // e.g., SST-5
  type  String // e.g., Spirit Storage
}

model Reg76Entry {
  id                    Int      @id @default(autoincrement())
  receiptDate           DateTime
  arrivalDate           DateTime?
  permitNo              String
  permitDate            DateTime?
  exportingDistillery   String
  invoiceNo             String
  invoiceDate           DateTime?
  vehicleNo             String
  tankerMakeModel       String?
  natureOfSpirit        String   
  storageVat            String   

  // Advised
  advisedBl             Float
  advisedAl             Float
  advisedStrength       Float
  advisedMassKg         Float

  // Measurement
  ladenWeightKg         Float
  unladenWeightKg       Float
  avgDensity            Float
  avgTemperature        Float

  // Result
  receivedStrength      Float
  remarks               String?

  // Auto-calculated fields
  receivedMass          Float
  receivedBl            Float
  receivedAl            Float
  transitWastageBl      Float
  transitWastageAl      Float

  createdBy             Int
  user                  User     @relation(fields: [createdBy], references: [id])
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
