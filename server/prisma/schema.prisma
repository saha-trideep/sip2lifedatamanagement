  id                    Int      @id @default(autoincrement())
  receiptDate           DateTime
  arrivalDate           DateTime?
  permitNo              String
  permitDate            DateTime?
  exportingDistillery   String
  invoiceNo             String
  invoiceDate           DateTime?
  vehicleNo             String
