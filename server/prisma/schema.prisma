generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("EMPLOYEE")
  createdAt DateTime @default(now())
  documents Document[]
  folders   Folder[] 
  registers RegisterLink[]
  auditLogs AuditLog[]
  invitesCreated UserInvite[] @relation("InvitedBy")
  reg76Entries   Reg76Entry[]
  reg74Events    Reg74Event[]
  regAVerifications RegAEntry[] @relation("RegAVerifier")
  regBEntries       RegBEntry[]
  
  // Phase 3 Relations
  exciseDutyEntries  ExciseDutyEntry[]
  treasuryChallans   TreasuryChallan[]
  
  // Phase 4 Relations
  reg78Entries       Reg78Entry[]
  
  // Phase 5 Relations (Production Fees)
  productionFeeEntries ProductionFeeEntry[]
}

model VatMaster {
  id          Int      @id @default(autoincrement())
  vatCode     String   @unique // SST-5 to SST-10, BRT-11 to BRT-17
  vatType     String   // SST, BRT
  capacityBl  Float?
  status      String   @default("IDLE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  events      Reg74Event[]
  batches     BatchMaster[] @relation("BatchVat")
}

model Reg74Event {
  id               Int      @id @default(autoincrement())
  vatId            Int
  vat              VatMaster @relation(fields: [vatId], references: [id])
  eventDateTime    DateTime
  eventType        String   // UNLOADING, INTERNAL_TRANSFER, WATER_ADDITION, BLENDING, PRODUCTION, ADJUSTMENT, OPENING, CLOSING
  
  // Contextual Data Blocks (populated based on eventType)
  openingData      Json?    // Cols 1-7: dipCm, temp, alcInd, strength, volumeBl, volumeAl
  receiptData      Json?    // Cols 8-11: source, qtyBl, strength, qtyAl
  issueData        Json?    // Cols 12-15: dest, caskNo, qtyBl, strength
  adjustmentData   Json?    // Cols 16-19 / 22-24: type(INC/WAST), reason, qtyBl, qtyAl, rltDip, rltBl
  productionData   Json?    // Cols 25-33: rltBl, strength, rltAl, vatCount, mfmBl, density, mfmStrength, mfmAl, deadStockAl, batchSessionSuffix
  closingData      Json?    // Cols 34-37: finalDipCm, finalBl, finalStrength, finalAl
  
  batchId          Int?
  batch            BatchMaster? @relation(fields: [batchId], references: [id])

  // Link to Reg-76 entry (for UNLOADING events)
  reg76EntryId     Int?
  reg76Entry       Reg76Entry? @relation(fields: [reg76EntryId], references: [id])

  remarks          String?
  createdBy        Int
  user             User     @relation(fields: [createdBy], references: [id])
  createdAt        DateTime @default(now())

  @@index([vatId])
  @@index([eventDateTime])
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  category  String?  // IMFL, AS, etc.
  batches   BatchMaster[]
}

model BatchMaster {
  id              Int      @id @default(autoincrement())
  baseBatchNo     String   @unique // e.g. 10AJD01
  brandId         Int
  brand           Brand    @relation(fields: [brandId], references: [id])
  vatId           Int      // This is the BRT vat
  vat             VatMaster @relation(fields: [vatId], references: [id], name: "BatchVat")
  
  sourceVatId     Int?     // The SST vat it came from
  sourceVatCode   String?  // Snapshotted vat code for easier audit
  receiptBl       Float?   // Initial transfer BL
  receiptAl       Float?   // Initial transfer AL
  receiptStrength Float?   // Initial transfer Strength
  
  startDate       DateTime // Batch start date
  totalVolumeBl   Float?   // Total blend prepared in VAT after reduction
  totalVolumeAl   Float?
  status          String   @default("OPEN") // OPEN, IN_PRODUCTION, CLOSED
  createdAt       DateTime @default(now())
  
  events          Reg74Event[]
  regAEntries     RegAEntry[]
  regBEntries     RegBEntry[]
}

model RegAEntry {
  id              Int      @id @default(autoincrement())
  batchId         Int
  batch           BatchMaster @relation(fields: [batchId], references: [id])
  sessionNo       Int      @default(1) // To support multi-day production (Batch-1, Batch-2 etc)
  
  // Phase 1: Receipt Volume of Spirit (Cols 5-8) - Copied from Batch on Session 1
  receiptFromVat  String?
  receiptStrength Float?
  receiptBl       Float?
  receiptAl       Float?
  
  // Phase 2: Total Blend Prepared in VAT (Cols 9-12) - Copied from Batch on Session 1
  blendingToVat   String?
  blendingStrength Float?
  blendingBl      Float?
  blendingAl      Float?
  
  // Phase 3: Batch Info (Cols 13-16)
  batchNoDate     String?  // Batch No. & Date
  productionDate  DateTime? // The specific date of this production session
  
  // Phase 4: MFM Data (Cols 17-21) - Specific to this session
  mfmDensity      Float?
  mfmTemp         Float?
  mfmStrength     Float?
  mfmTotalBl      Float?
  mfmTotalAl      Float?
  
  // Phase 5: Bottling Counts (Bottle Counts Only, as requested)
  bottling750     Int?     @default(0)
  bottling600     Int?     @default(0)
  bottling500     Int?     @default(0)
  bottling375     Int?     @default(0)
  bottling300     Int?     @default(0)
  bottling180     Int?     @default(0)
  
  // Phase 6: Finished Goods (Cols 28-30)
  spiritBottledBl Float?
  avgStrength     Float?
  spiritBottledAl Float?
  
  // Phase 7: Wastages (Threshold 0.1% for MFM vs Bottles)
  differenceFoundAl  Float? // Difference between MFM-II and Bottled (AL)
  productionIncrease Float?
  productionWastage  Float?
  allowableWastage   Float? // 0.1% of MFM AL
  chargeableWastage  Float?
  
  remarks         String?
  status          String   @default("PLANNED") // PLANNED, ACTIVE, COMPLETED
  verifiedBy      Int?
  verifier        User?    @relation("RegAVerifier", fields: [verifiedBy], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([batchId])
}

model UserInvite {
  id          String    @id @default(uuid())
  email       String
  name        String?
  role        String    @default("EMPLOYEE")
  tokenHash   String    @unique
  expiresAt   DateTime
  usedAt      DateTime?
  invitedById Int
  invitedBy   User      @relation("InvitedBy", fields: [invitedById], references: [id])
  createdAt   DateTime  @default(now())

  @@index([email])
  @@index([tokenHash])
  @@index([expiresAt])
}

model Folder {
  id        Int        @id @default(autoincrement())
  name      String
  department String?    
  createdAt DateTime   @default(now())
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  documents Document[]
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String   
  filename    String   
  path        String   
  type        String   
  description String?
  department  String   
  uploadedAt  DateTime @default(now())
  
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  
  folderId    Int?
  folder      Folder?  @relation(fields: [folderId], references: [id])
  
  // Phase 3 Relations
  treasuryChallans TreasuryChallan[]
}

model RegisterLink {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     Int
  action     String
  entityType String
  entityId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([action])
  @@index([entityType])
  @@index([createdAt])
}

